<%= render "admins/admin_nav" %>
<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.episode_name %></td>
        <td><%= episode.description %></td>
      </tr>

      <tr>
        <td><%= link_to 'Show', admin_episode_path(episode) %></td>
        <td><%= link_to 'Edit', edit_admin_episode_path(episode) %></td>
        <td><%= link_to 'Delete', admin_episode_path(episode), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'new', new_admin_episode_path %>
