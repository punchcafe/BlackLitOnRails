<%= render "admins/admin_nav" %>
<div class="page_content">
  <% @public_texts.each do |public_text| %>
  <div class="public_text">
    <div class="public_text_contents">
      <div class="public_text_name">
        <%= link_to public_text.public_text_name, edit_admin_public_text_path(public_text) %>
      </div>
      <div class="public_text_body">
        <%= public_text.body %>
      </div>
    </div>
    <div class="public_text_edit_button">
      <%= link_to "Edit", edit_admin_public_text_path(public_text) %>
    </div>
  </div>
  <% end %>
</div>
